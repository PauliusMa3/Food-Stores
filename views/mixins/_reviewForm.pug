mixin reviewForm(store = {})
  form.reviewer(action=`/reviews/${store._id}` method="POST")
    textarea(name="text" placeholder='Have you been at this place? Please leave a review...')
    .reviewer__meta
      .reviewer__stars
        each number in [5,4,3,2,1]
          input(type='radio', id=`star${number}` name=`rating` required value=number)
          label(for=`star${number}`)
      input.button(type='submit', value="Submit a Review ->")